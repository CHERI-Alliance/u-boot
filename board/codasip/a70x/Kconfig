if TARGET_CODASIP_A70X

config SYS_BOARD
	default "a70x"

config SYS_VENDOR
	default "codasip"

config SYS_CPU
	default "generic"

config SYS_CONFIG_NAME
	default "codasip-a70x"

config TEXT_BASE
	default 0x80000000 if !RISCV_SMODE
	default 0x80200000 if RISCV_SMODE

config BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select GENERIC_RISCV
	imply MMC
	imply SPI
	imply MMC_SPI
	imply XILINX_GPIO
	imply GPIO_HOG

endif
